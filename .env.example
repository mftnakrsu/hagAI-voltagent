# ============================================
# HAGAI - ASANA PROJECT MANAGEMENT ASSISTANT
# Environment Configuration
# ============================================

# ============================================
# ASANA CONFIGURATION (REQUIRED)
# ============================================

# Your Asana Personal Access Token
# Get it from: https://app.asana.com/0/developer-console
ASANA_ACCESS_TOKEN=your_asana_access_token_here

# Your Asana Workspace GID
# Find it in your Asana workspace URL or via API
ASANA_WORKSPACE_GID=your_workspace_gid_here

# ============================================
# LLM PROVIDER CONFIGURATION (REQUIRED)
# ============================================

# Choose your LLM provider: 'anthropic' or 'openai'
LLM_PROVIDER=anthropic

# ============================================
# ANTHROPIC CONFIGURATION (if using Claude)
# ============================================

# Anthropic API Key
# Get it from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Claude model to use (recommended: claude-3-5-sonnet-20241022)
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ============================================
# OPENAI CONFIGURATION (if using GPT)
# ============================================

# OpenAI API Key
# Get it from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI model to use (recommended: gpt-4o)
OPENAI_MODEL=gpt-4o

# ============================================
# SERVER CONFIGURATION (OPTIONAL)
# ============================================

# Port for the VoltAgent server
PORT=3141

# Logging level: 'debug', 'info', 'warn', 'error'
LOG_LEVEL=info
